﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My CV</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="~/css/templatefour.css" rel="stylesheet" />
    @{
        Layout = null;
    }
</head>
<body>
    <div class="bodycontainer">
        <div class="row">
            <!-- Left Column -->
            <div class="col-lg-4 col-md-6 col-sm-12 left-column">
                <img src="~/images/@ViewBag.Introduction.ImageURL" alt="Your Name" class="profile-image">
                <h2 class="mb-3">@ViewBag.Introduction.IntroName</h2>
                <h4 class="mb-3">Jr. Software Programmer</h4>
                <p>Address: @ViewBag.Introduction.IntroAddress</p>
                <p>Contact No: @ViewBag.Introduction.IntroContact</p>
                @foreach (var social in ViewBag.Introduction.SocialMediaList)

                {
                    <p><a href="@social.LinkOrText" class="text-white text-decoration-none">@social.SocialMediaName:@social.LinkOrText</a></p>

                }

                <div>
                    <p class="mt-3"><strong>Skills:</strong></p>
                    @foreach (var Skills in ViewBag.Skills)
                    {
                        <span style="font-size:13px" class="badge">@Skills.Description</span>

                    }


                    <p class="mt-3"><strong>Certifications:</strong></p>
                    <ul>
                        <li>Vendor Certifications: Microsoft Certified Solution Developer (MCSD): Web Developer certificate from Microsoft Corporation</li>
                        <li>Certification by IsDB-BISEW On Enterprise Systems Analysis Design with C#</li>
                        <li>Professional Programming with C# by Devskill</li>
                        <li>Full Stack Asp.net Core MVC Web Development by Devskill</li>
                        <li>Complete Web Development Course By Jhankar Mahbub</li>
                        <li>Certification in HTML5 & CSS3 by Pirple.com</li>
                    </ul>
                    <div>
                        <p class="mt-3"><strong>Languages:</strong></p>
                        <span style="font-size:13px" class="badge ">English</span>
                        <span style="font-size:13px" class="badge">Spanish</span>
                    </div>
                </div>


            </div>

            <!-- Right Column -->
            <div class="col-lg-7 col-md-6 col-sm-12 right-column">
                <div class="section-header">
                    <h5>Summary</h5>
                </div>
                <p>@ViewBag.ProfessionalSummary.ProfessionalSummary</p>

                <div class="section-header">
                    <h5>Experience</h5>
                </div>
                <div class="experience-item">
                    @foreach (var WorkExperience in ViewBag.WorkExperiences)
                    {
                        <h6>@WorkExperience.JobTitle</h6>
                        <p><strong>Duration:</strong> @WorkExperience.StartDate</p>
                        <p><strong>Company:</strong> @WorkExperience.Company</p>
                        <p><strong>Description:</strong> </p>
                        <ul>
                            @foreach (var descriptionItem in WorkExperience.DescriptionItems)
                            {
                                <li>@descriptionItem.Description</li>
                            }
                        </ul>
                    }


                </div>

                <!-- Repeat the experience section for each job -->

                <div class="section-header">
                    <h5>Education</h5>
                </div>
                <div class="education-item">
                    @foreach (var Education in ViewBag.Education)
                    {
                        <h6>@Education.Degree</h6>
                        <p>
                            <strong>University:</strong>
                            @Education.Institution
                        </p>
                        <p><strong>Year:</strong>@Education.GraduationYear</p>
                        <p><strong>Result:</strong> CGPA: @Education.CGPA</p>

                    }



                </div>

                <!-- Repeat the education section for each degree -->

                <div class="section-header">
                    <h5>References</h5>
                </div>
                <div class="row">
                    @foreach (var Reference in ViewBag.References)
                    {
                        <div class="col-md-6">
                            <p><strong>Name:</strong> @Reference.Name</p>
                            <p><strong>Title:</strong> @Reference.Designation</p>
                            <p><strong>Company: </strong>@Reference.Company</p>
                            <p><strong>Email:</strong> @Reference.Email</p>
                            <p><strong>Phone:</strong> @Reference.Contact</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</body>
</html>